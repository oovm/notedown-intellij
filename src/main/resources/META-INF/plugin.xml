<idea-plugin>
	<id>notedge.idea</id>
	<name>JSS Support</name>
	<vendor>voml</vendor>
	<!-- Product and plugin compatibility requirements -->
	<!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
	<depends>com.intellij.modules.platform</depends>
	<!--    <depends optional="true" config-file="plugin-with-rust.xml">org.rust.lang</depends>-->
	<resource-bundle>messages.NotedownBundle</resource-bundle>
	<extensions defaultExtensionNs="com.intellij">
		<fileType
			name="Notedown"
			language="Notedown"
			extensions="note;notedown"
			implementationClass="notedge.idea.language.file.NotedownFileType"
			fieldName="INSTANCE"
		/>
		<lang.parserDefinition
			language="Notedown"
			implementationClass="notedge.idea.language.psi.NParserDefinition"
		/>
		<projectViewNestingRulesProvider implementation="notedge.idea.language.file.NotedownFileGroup"/>
		<!-- Highlight -->
		<additionalTextAttributes scheme="Default" file="colors/JssDefault.xml"/>
		<additionalTextAttributes scheme="Darcula" file="colors/JssDarcula.xml"/>
		<colorSettingsPage implementation="notedge.idea.ide.highlight.NColorSettingsPage"/>
		<highlightVisitor implementation="notedge.idea.ide.highlight.NASTHighlighter"/>
		<lang.syntaxHighlighter
			language="Notedown"
			implementationClass="notedge.idea.ide.highlight.NTokenHighlighter"/>
		<!-- Formatter -->
		<lang.formatter
			language="Notedown"
			implementationClass="notedge.idea.ide.formatter.JssFormattingModelBuilder"
		/>
		<lang.commenter
			language="Notedown"
			implementationClass="notedge.idea.ide.formatter.JssCommenter"
		/>
		<lang.smartEnterProcessor
			language="Notedown"
			implementationClass="notedge.idea.ide.formatter.JssSmartEnter"
		/>
		<!-- Document -->
		<!--documentationProvider implementation="notedge.idea.ide.doc.JssDocumentationExtender"-->
		<psi.referenceContributor implementation="notedge.idea.ide.doc.JssUrlReferenceContributor"/>
		<lang.documentationProvider
			language="Notedown"
			implementationClass="notedge.idea.ide.doc.JssDocumentationProvider"
		/>

		<lang.braceMatcher
			language="Notedown"
			implementationClass="notedge.idea.ide.matcher.JssBraceMatcher"
		/>
		<lang.quoteHandler
			language="Notedown"
			implementationClass="notedge.idea.ide.matcher.JssQuoteHandler"
		/>
		<lang.foldingBuilder
			language="Notedown"
			implementationClass="notedge.idea.ide.matcher.NFoldingBuilder"
		/>
		<indexPatternBuilder
			implementation="notedge.idea.ide.todo.VomlTodoIndexPatternBuilder"
		/>
		<todoIndexer
			filetype="Notedown"
			implementationClass="notedge.idea.ide.todo.VomlTodoIndexer"
		/>
		<completion.contributor
			language="Notedown"
			implementationClass="notedge.idea.ide.completion.VomlOptionCompletionContributor"
		/>

		<annotator language="Notedown" implementationClass="notedge.idea.ide.annotator.LiteralChecker"/>

		<langCodeStyleSettingsProvider
			implementation="notedge.idea.ide.codeStyle.NLanguageCodeStyleSettingsProvider"
		/>

	</extensions>
	<actions>
		<action id="NewJssFile"		        class="notedge.idea.ide.actions.JssCreateFile">
			<add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewHtmlFile"/>
		</action>
		<action id="jss.JssConvertJson"
		        class="notedge.idea.ide.actions.JssConvertJson"/>
		<group id="jss.JssGenerator" popup="true" text="JssGenerator">
			<reference ref="NewJssFile"/>
			<reference ref="jss.JssConvertJson"/>
			<add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
			<add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
			<add-to-group group-id="EditorTabPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
			<add-to-group group-id="ConsoleEditorPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
		</group>
	</actions>
</idea-plugin>
